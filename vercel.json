{
  "version": 2,
  "builds": [
    {
      "src": "project/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist",
        "outputDirectory": "dist"
      }
    },
    {
      "src": "server/server.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/server/server.js"
    },
    {
      "src": "/admin",
      "dest": "/project/dist/admin/index.html"
    },
    {
      "src": "/admin/(.*)",
      "dest": "/project/dist/admin/index.html"
    },
    {
      "src": "/static/(.*)",
      "dest": "/project/dist/static/$1"
    },
    {
      "src": "/assets/(.*)",
      "dest": "/project/dist/assets/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/project/dist/index.html"
    }
  ],
  "env": {
    "NODE_ENV": "production",
    "VITE_API_BASE_URL": "https://evolaine-backend.onrender.com"
  },
  "buildCommand": "cd project && npm install && npm run build",
  "outputDirectory": "project/dist"
}
