{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "env": {
    "VITE_APP_ENV": "production",
    "VITE_ENABLE_ANALYTICS": "true",
    "VITE_META_PIXEL_ID": "743290068698217"
  },
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "https://evolaine-backend.onrender.com/api/$1"
    },
    {
      "src": "/_next/static/(.*)",
      "dest": "/_next/static/$1"
    },
    {
      "handle": "filesystem"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ]
}
