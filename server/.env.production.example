# Configuration de production pour EVOLAINE Backend
# Copier ce fichier en .env.production et remplir les valeurs

# Configuration de l'application
NODE_ENV=production
PORT=3004

# Sécurité - IMPORTANT: Générer un nouveau secret pour la production
JWT_SECRET=85ffc145835ad0942b49d6f5558c85cf
JWT_EXPIRES_IN=7d

# Base de données PostgreSQL (Render ou autre)
DATABASE_URL=postgresql://user:password@host:port/database?ssl=true
DB_SSL=true
DB_MAX_CONNECTIONS=20
DB_IDLE_TIMEOUT=30000

# Configuration du CORS - Ajouter vos domaines de production
ALLOWED_ORIGINS=https://evolaine.vercel.app,https://project-lilac-beta.vercel.app,https://evolaine.com,https://www.evolaine.com

# Configuration email (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=votre-email@gmail.com
SMTP_PASS=votre-mot-de-passe-application
EMAIL_FROM=noreply@evolaine.com
EMAIL_SUPPORT=support@evolaine.com

# Admin credentials
ADMIN_EMAIL=admin@evolaine.com
ADMIN_PASSWORD=CHANGEZ_CE_MOT_DE_PASSE_ADMIN

# Rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Session
SESSION_SECRET=CHANGEZ_CE_SECRET_DE_SESSION
SESSION_MAX_AGE=86400000

# Monitoring (optionnel)
SENTRY_DSN=https://xxxxx@sentry.io/xxxxx
NEW_RELIC_LICENSE_KEY=xxxxx

# Logs
LOG_LEVEL=info
LOG_FORMAT=json

# Cache Redis (optionnel)
REDIS_URL=redis://user:password@host:port

# CDN pour les assets (optionnel)
CDN_URL=https://cdn.evolaine.com

# Payment Gateway (optionnel)
STRIPE_SECRET_KEY=sk_live_xxxxx
STRIPE_WEBHOOK_SECRET=whsec_xxxxx

# SMS Gateway (optionnel)
TWILIO_ACCOUNT_SID=xxxxx
TWILIO_AUTH_TOKEN=xxxxx
TWILIO_PHONE_NUMBER=+1234567890
